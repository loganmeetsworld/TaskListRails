<div class="create_form">
	<%= form_for @task do |f| %> 
		<%= f.label :person_id, "Task Owner" %> <br>
		<%= f.collection_select :person_id, Person.order(:name), :id, :name, include_blank: true %>
	
		<br><br>

		<%= f.label :name %> <br>
		<%= f.text_field :name, required: true, size: "60", placeholder: "Name your task here!"%> 
		
		<br><br>
		
		<%= f.label :complete_date %> <br>
		<%= f.date_field :complete_date %>
		
		<br><br>
		
		<%= f.label :description %> <br>
		<%= f.text_area :description, size: "60x5", placeholder: "Describe your task here (optional)!"%>
		
		<br><br>

		<%= !@task.id.nil? ? (f.submit value: "Update Task", id: 'special-button') : (f.submit value: "Add Task", id: 'special-button') %>
		
		<% end %>
</div>